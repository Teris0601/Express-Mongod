.shop_container{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.shop_line{
  height: 40rpx;
  margin-bottom: 20rpx;
  flex-direction: row;
}
.shop_line .shop_img{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.shop_line .shop_title{
  margin-left: 20rpx;
  width: 40rpx;
  font-size: 32rpx;
  color: #FF741B;
}
.show_imgSrc{
  width: 300rpx;
  height: 230rpx;
  display: flex;
}
.show_imgSrc .left, .show_imgSrc .right{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.show_imgSrc .left{
  width: 100%;
}
.show_imgSrc .left .left_img{
  width: 100%;
  height: 100%;
}
.show_imgSrc .right{
  width: 33.33%;
  flex-wrap: wrap;
}
.show_imgSrc .right .right_topimg, .show_imgSrc .right .right_downimg{
  width: 100%;
  height: 50%;
}
.descript{
  text-align: center;
  height:50rpx;
  line-height:50rpx;
}
.descript .classify{
  font-size: 30rpx;
  width: 125rpx;
}


