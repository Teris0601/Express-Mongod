/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.section{
  border-bottom: 1rpx solid #dedede;
	margin-bottom: 15rpx;
	padding: 20rpx;
  background-color: #CDFFCD;
}

.recommending{
  position: absolute;
  left: 0;
  top: 0;
  width: 755rpx;
  height: 80rpx;
}
.recommending image{
  width: 100%;
  height: 100%;
}


.b1 .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
} 

.b1 .mask {
  background: rgba(0, 0, 0, 0.7);
}

.t_w_input {
  position: fixed;
  top: 65%;
  width: 80%;
  height: 230rpx;
  left: 10%;
  margin-top: -450rpx;
  background: #fff;
  z-index: 999;
  border-radius: 10px;
  overflow: hidden;
}

.b2{
  width: 600rpx;
  height: 300rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -100rpx 0 0 -300rpx; 
}

.close{
  position:absolute;
  width:45rpx;
  height:45rpx;
  right:27rpx;
  top:8rpx;
}
.close_img{
  width: 100%;
  height: 100%;
}

.ensure {
  background: #1aad19;
  color: #fff;
  width: 30%;
  height: 70rpx;
  font-size: 26rpx;
  margin-top: 140rpx;
}

.index-like{
  display:flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.index-vip-img{
  margin-left: 20rpx;
  height: 90rpx;
  width: 90rpx;
  vertical-align: middle;
}
.postalCode{
  margin-left: 10rpx;
  width: 350rpx;
  padding-left: 21rpx;
  vertical-align: middle;
  margin-top: 23rpx;
}

.index-btn{
  margin-right:29rpx;
  width:128rpx;
  height:50rpx;
  line-height:44rpx;
  border:1px solid green;
  border-radius:5rpx;
  text-align:center;
  margin-top:28rpx;
}
.index-btn-font{
  font-size: 25rpx;
  line-height: 50rpx;
  color: green;

}